# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

# https://github.com/jigish/slate

# Heavily inspided on:
# http://thume.ca/howto/2012/11/19/using-slate/
# https://github.com/dmac/dotfiles/blob/master/.slate


#######################################################
#             Config: config name value               #
#-----------------------------------------------------#
# https://github.com/jigish/slate/wiki/Global-Configs #
#######################################################

config defaultToCurrentScreen           true
config nudgePercentOf                   screenSize
config resizePercentOf                  screenSize
config secondsBetweenRepeat             0.1
config checkDefaultsOnLoad              true
config focusCheckWidthMax               3000
config windowHintsShowIcons             true
config windowHintsBackgroundColor       96;96;64;0.5
config windowHintsIgnoreHiddenWindows   false
#config windowHintsOrder                persist
config windowHintsSpread                true
config windowHintsSpreadPadding         40
config windowHintsSpreadSearchWidth     80
config windowHintsSpreadSearchHeight    80
config switchIconPadding                5
config switchBackgroundColor            50;53;58;0.7
config switchSelectedPadding            5
#config switchIconSize                  96
config switchShowTitles                 true
config switchFontName                   "Inconsolata\ for\ Powerline"  
config switchFontSize                   14
config switchRoundedCornerSize          5
config undoOps                          move,resize


############################
# Alias: alias name value  #
############################

# Grid
# -----
alias gridX 6
alias gridY 2

alias gridWidthX  screenSizeX/${gridX}
alias gridWidthY  screenSizeY/${gridY}

# Modifiers
# ---------
alias modifierResize         ctrl;alt
alias modifierResizeReverse  ctrl;alt;cmd
alias modifierPush           ctrl;alt;cmd
alias modifierNudge          shift;alt
alias modifierFocus          shift;ctrl
alias modifierThrow          ctrl;alt
alias modifierLayout         ctrl;alt;cmd
alias modifierHint           ctrl;alt;cmd
alias modifierGrid           ctrl;alt;cmd

# Abstract positions
# ------------------
alias full        move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias leftHalf    move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias leftThird   move screenOriginX;screenOriginY screenSizeX/3;screenSizeY
alias rightHalf   move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
#alias rightThird move screenOriginX+screenSizeX/3+screenSizeX/3;screenOriginY screenSizeX/3; screenSizeY
alias middleThird move screenOriginX+screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY
alias topHalf     move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
alias bottomHalf  move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
alias topLeft     corner top-left resize:screenSizeX/2;screenSizeY/2
alias topRight    corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomLeft  corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomRight corner bottom-right resize:screenSizeX/2;screenSizeY/2


# Monitors
# --------
alias monitorLeft    0
alias monitorMiddle  1
alias monitorRight   2

# Applications
# ------------
alias browser	'Google Chrome'
alias ide     	'PHPStorm'
alias editor  	'MacVim'
alias mail    	'Airmail'
alias calendar  'Calendar'
alias term	  	'iTerm'
alias asana   	'Asana'

# 1 Monitor Layout
layout oneScreen ${term} 	  ${full} 	 	${monitorLeft}
layout oneScreen ${mail}      ${full} 	 	${monitorLeft}
layout oneScreen ${calendar}  ${full} 	 	${monitorLeft}
layout oneScreen ${asana}     ${full}    	${monitorLeft}

# 2 Monitors Layout
layout twoScreens ${term}     ${full}    	${monitorMiddle}
layout twoScreens ${mail}  	  ${topHalf} 	${monitorLeft}
layout twoScreens ${calendar} ${bottomHalf} ${monitorLeft}
layout twoScreens ${asana}    ${full}    	${monitorMiddle}


###############################
# Bindings: alias name value  #
###############################

# Resize Bindings
# ---------------
#bind right:${modifierResize}        resize +16% +0
#bind left:${modifierResize}         resize -16% +0
bind right:${modifierResize}        resize +(screenSizeX/${gridX})% +0
bind left:${modifierResize}         resize -(screenSizeX/${gridX})% +0
bind up:${modifierResize}           resize +0   -10%
bind down:${modifierResize}         resize +0   +10%
#bind right:${modifierResizeReverse} resize -16% +0 bottom-right
#bind left:${modifierResizeReverse}  resize +16% +0 bottom-righthalf
bind right:${modifierResizeReverse} resize -(screenSizeX/${gridX})% +0 bottom-right
bind left:${modifierResizeReverse}  resize +(screenSizeX/${gridX})% +0 bottom-right
bind up:${modifierResizeReverse}    resize +0   +10% bottom-right
bind down:${modifierResizeReverse}  resize +0   -10% bottom-right


# Push Bindings
# -------------
bind return:${modifierPush} ${full}
bind t:${modifierPush}      ${topHalf}
bind b:${modifierPush}      ${bottomHalf}
bind l:${modifierPush}      ${leftHalf}
bind k:${modifierPush}      ${leftThird}
bind m:${modifierPush}      ${middleThird}
bind r:${modifierPush}      ${rightHalf}
#bind e:${modifierPush}     ${rightThird}
#bind 1:${modifierPush}      ${topLeft}
#bind 2:${modifierPush}      ${topRight}
#bind 3:${modifierPush}      ${bottomLeft}
#bind 4:${modifierPush}      ${bottomRight}

# Nudge Bindings
# --------------
bind right:${modifierNudge} nudge +10% +0
bind left:${modifierNudge}  nudge -10% +0
bind up:${modifierNudge}    nudge +0   -10%
bind down:${modifierNudge}  nudge +0   +10%

# Throw Bindings
# --------------
#bind 1:ctrl;alt throw 0 resize
#bind 2:ctrl;alt throw 1 resize
#bind 3:ctrl;alt throw 2 resize

# Focus Bindings
# --------------
bind right:${modifierFocus} focus right
bind left:${modifierFocus}  focus left
bind up:${modifierFocus}    focus up
bind down:${modifierFocus}  focus down
bind up:${modifierFocus}    focus behind
bind down:${modifierFocus}  focus behind

# Layout Bindings
# --------------
bind 1:${modifierLayout} layout oneScreen
bind 2:${modifierLayout} layout twoScreens

# Window Hints
# ------------

# Hints
# -----
bind h:${modifierHint} hint ASDFGHJKLQWERTYUIOPCVBN # use whatever keys you want

# Grid
# -----
bind g:${modifierGrid} grid padding:5 0:${gridX},${gridY} 1:${gridX},${gridY}
