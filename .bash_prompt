# Colors
BLACK="\[\033[1;30m\]"
LIGHT_BLACK="\[\033[0;30m\]"
RED="\[\033[1;31m\]"
LIGHT_RED="\[\033[0;31m\]"
GREEN="\[\033[1;32m\]"
LIGHT_GREEN="\[\033[0;32m\]"
BROWN="\[\033[1;33m\]"
YELLOW="\[\033[0;33m\]"
BLUE="\[\033[1;34m\]"
LIGHT_BLUE="\[\033[0;34m\]"
MAGENTA="\[\033[1;35m\]"
LIGHT_MAGENTA="\[\033[0;35m\]"
CYAN="\[\033[1;36m\]"
LIGHT_CYAN="\[\033[0;36m\]"
WHITE="\[\033[1;37m\]"
LIGHT_GRAY="\[\033[0;37m\]"
DEFAULT="\[\033[0m\]"

# set git PS1 settings
export GIT_PS1_SHOWDIRTYSTATE=true
export GIT_PS1_SHOWSTASHSTATE=true
export GIT_PS1_SHOWUNTRACKEDFILES=true
export GIT_PS1_SHOWUPSTREAM="auto"  

# Check if our terminal/console can play with colors and set the proper prompt 
case $TERM in
    xterm*)
        PS1="\n$LIGHT_BLACK($WHITE\u$LIGHT_GREEN@$WHITE\h$LIGHT_BLACK)-($WHITE\j$LIGHT_BLACK)-($WHITE$(date '+%d %h %H:%M')$LIGHT_BLACK)$MAGENTA$(__git_ps1 ' (%s)' )\n$LIGHT_BLACK($GREEN\w$LIGHT_BLACK)-($GREEN$(ls -1 | wc -l | sed 's: ::g') files, $(ls -lah | grep -m 1 total | sed 's/total //')b$LIGHT_BLACK) $WHITE\$$DEFAULT"
        ;;
    *)
        PS1="\n(\u@\h)-(\j)-($(date '+%d %h %H:%M')) $(__git_ps1 '(%s)')\n(\w)-($(ls -1 | wc -l | sed 's: ::g') files, $(ls -lah | grep -m 1 total | sed 's/total //')b) \$"
        ;;
esac
